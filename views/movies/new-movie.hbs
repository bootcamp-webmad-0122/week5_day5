<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Nueva pelicula</h1>
            <hr>

            <form action="/peliculas/crear" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="titleInput" class="form-label">Título</label>
                    <input type="text" class="form-control" id="titleInput" name="title">
                </div>
                <div class="mb-3">
                    <label for="yearInput" class="form-label">Año</label>
                    <input type="number" class="form-control" id="yearInput" name="year">
                </div>
                <div class="mb-3">
                    <label for="imageInput" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="imageInput" name="imageFile">
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark btn-block">Crear película</button>
                </div>
            </form>

        </div>
    </div>
</div>